@{
    ViewBag.Title = "Cambiar Contraseña | Grupos.co";
}

<div class="container">
    <div class="spin" id="spinnerCambiarPassword" style="display:none">
        <div class="preloaderEmail"></div>
    </div>
    <h3>Cambiar contraseña</h3>
    <div class="modal-body" style="padding-bottom:10px;">
        <div class="col-12 input-group mb-3">
            <input id="passwordChange" type="password" placeholder="Nueva Contraseña" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" autocomplete="off">
        </div>
        <div class="col-12 input-group mb-3">
            <input id="passwordChangeConfirm" type="password" placeholder="Confirmar Nueva Contraseña" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" autocomplete="off">
        </div>
        <div class="col-12 input-group mb-3">
            <input id="tokenNumber" type="text" placeholder="Token" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" autocomplete="off">
        </div>
        <div class="col-6 text-center mb-4 mt-4">
            <button id="btnCambiarPassword" type="button" class="btn" style="background-color:#6101d1; color:white; cursor:pointer; width:50%">Recuperar</button>
        </div>
        <div class="input-group col-12"><span id="notificacionPasswordOk" class="Ok" style="display:none"></span></div>
        <div class="input-group col-12"><span id="notificacionPasswordNOk" class="NOk" style="display:none"></span></div>
    </div>
</div>